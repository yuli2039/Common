<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/album_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="top" >

        <com.yu.picmultiselect.widget.FilterImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:onClick="btnBack"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:ellipsize="middle"
            android:maxLength="12"
            android:singleLine="true"
            android:text="选择照片"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center_horizontal"
        android:horizontalSpacing="8dp"
        android:listSelector="@drawable/selector_item_click"
        android:numColumns="3"
        android:padding="10dp"
        android:scrollbars="none"
        android:verticalSpacing="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayLine_e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray_9c" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/trans"
            android:onClick="btnOK"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tvNum"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0/9"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_16" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/trans"
            android:onClick="btnPreview"
            android:text="预览"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_16" />
    </RelativeLayout>

</LinearLayout>